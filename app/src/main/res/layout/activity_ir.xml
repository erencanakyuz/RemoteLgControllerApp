<!-- activity_ir.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/remote_background_gradient"
    android:padding="16dp"
    android:gravity="center">

    <!-- Güç Düğmesi -->
    <ImageButton
        android:id="@+id/btnPower"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/circle_background"
        android:contentDescription="Power Button"
        android:scaleType="centerInside"
        android:src="@drawable/power_button1"
        android:layout_centerInParent="true" />

    <!-- Kanal Arttırma Düğmesi -->
    <ImageButton
        android:id="@+id/btnChannelUp"
        android:layout_width="62dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_arrow"
        android:src="@drawable/ic_up"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_below="@id/btnPower"
        android:layout_marginBottom="12dp"
        android:stateListAnimator="@null"
        android:elevation="4dp" />

    <!-- Kanal Azaltma Düğmesi -->
    <ImageButton
        android:id="@+id/btnChannelDown"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_arrow"
        android:src="@drawable/ic_down"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_below="@id/btnChannelUp"
        android:stateListAnimator="@null"
        android:elevation="4dp" />

    <!-- "CH" Etiketi -->
    <TextView
        android:id="@+id/tvChannelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CH"
        android:textColor="#FFEB3B"
        android:textSize="20sp"
        android:layout_below="@id/btnPower"
        android:layout_toEndOf="@id/btnChannelUp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-light" />

    <!-- Ses Arttırma Düğmesi -->
    <ImageButton
        android:id="@+id/btnVolumeUp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_arrow"
        android:src="@drawable/ic_up"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:layout_below="@id/btnPower"
        android:layout_marginBottom="12dp"
        android:stateListAnimator="@null"
        android:elevation="4dp" />

    <!-- Ses Azaltma Düğmesi -->
    <ImageButton
        android:id="@+id/btnVolumeDown"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_arrow"
        android:src="@drawable/ic_down"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:layout_below="@id/btnVolumeUp"
        android:stateListAnimator="@null"
        android:elevation="4dp" />

    <!-- "VOL" Etiketi -->
    <TextView
        android:id="@+id/tvVolumeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOL"
        android:textColor="#FFEB3B"
        android:textSize="20sp"
        android:layout_below="@id/btnPower"
        android:layout_toStartOf="@id/btnVolumeUp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-light" />

    <!-- Alt Sağ Köşedeki Yazı -->
    <TextView
        android:id="@+id/tvByErenCan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="-100dp"
        android:fontFamily="sans-serif-black"
        android:text="Akyuz Ailesi Kumanda Servisi"
        android:textColor="#009688"
        android:textSize="18sp" />

</RelativeLayout>
